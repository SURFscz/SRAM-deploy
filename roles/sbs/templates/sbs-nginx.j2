server {
    listen {{sbs_backend_port}} ssl http2;
    server_name _        sbs.vm.scz-vm.net;

    ssl_certificate     {{ ssl_certs_dir }}/{{ internal_base_domain }}.crt;
    ssl_certificate_key {{ ssl_certs_dir }}/{{ internal_base_domain }}.key;

    root /opt/sbs/sbs/client/build;

    set $csp "default-src 'none'; base-uri 'self'; connect-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; font-src 'self'; frame-src 'none'; form-action 'self' https://*.{{base_domain}}; frame-ancestors 'none'; block-all-mixed-content;";

    add_header Content-Security-Policy $csp;

    gzip  on;
    gzip_min_length 1000;
    gzip_proxied any;
    gzip_types
        text/css
        text/javascript
        application/javascript;

    location / {
        try_files $uri @index;
    }

    location /static {
        add_header Content-Security-Policy $csp;
        add_header Cache-Control "max-age=3600, public";
    }

    location @index {
        rewrite ^ /index.html;
    }

    location ~ /(api|pam-weblogin|flasgger_static|swagger|health|config|info) {
        add_header Content-Security-Policy $csp;
        add_header Cache-Control "nocache, private";
        include proxy_params;
        proxy_pass http://127.0.0.1:8080;
    }

    location /socket.io {
        include proxy_params;
        proxy_http_version 1.1;
        proxy_buffering off;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_pass http://127.0.0.1:8080/socket.io;
    }
}
