[Unit]
Description=OIDC-OP
After=syslog.target network.target

# TODO: draai dit als een normale gebruiker neit als root
[Service]
Type=simple
User=root
WorkingDirectory={{ oidc_dir }}/example/flask_op
ExecStart={{ oidc_dir_venv }}/bin/python {{ oidc_dir }}/example/flask_op/server.py config_op.yaml
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=oidc-op

[Install]
WantedBy=multi-user.target
